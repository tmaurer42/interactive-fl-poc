{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "docker-network",
      "command": "docker network create fl-poc || true" 
    },
    {
      "label": "yarn build",
      "type": "shell",
      "command": "yarn build",
      "group": {
          "kind": "build",
          "isDefault": true
      }
    },
    {
      "type": "docker-build",
      "label": "docker-build",
      "platform": "python",
      "dockerBuild": {
        "tag": "fl-client:latest",
        "dockerfile": "${workspaceFolder}/Dockerfile",
        "context": "${workspaceFolder}",
        "pull": true
      },
      "dependsOn": ["yarn build"],
    },
    {
      "type": "docker-run",
      "label": "docker-run: debug",
      "dependsOn": ["docker-build", "docker-network"],
      "dockerRun": {
        "network": "fl-poc",
        "containerName": "fl-client",
        "env": {
          "FLASK_APP": "app.py",
          "FLASK_ENV": "development"
        },
        "volumes": [
          {
            "containerPath": "/app",
            "localPath": "${workspaceFolder}"
          }
        ],
        "ports": [
          {
            "containerPort": 4002,
            "hostPort": 4002
          }
        ]
      },
      "python": {
        "args": ["run", "--host", "0.0.0.0", "--port", "4002", "--reload"],
        "module": "flask"
      }
    }
  ]
}
